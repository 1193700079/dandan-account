page {
  overflow-x: hidden;
  width: 100%;
}
.month-selector {
  display: flex;
  flex-wrap: nowrap;
  font-size: 29rpx;
  background-color: #5e72e4;
  color: #fff;
  align-items: flex-start;
  justify-content: space-around;
  padding: 0 30rpx 40rpx;
  height: 100rpx;
  border-radius: 0 0 20% 20%;
  margin: 0 -20rpx;
  overflow-x: hidden;
}
.picker {
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.hide-scroll {
  width: 80%;
  height: 69rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.months {
  display: flex;
  white-space: nowrap;
  align-items: flex-start;
  padding-bottom: 8rpx;
}
.month {
  margin: 20rpx;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}
.active {
  border-bottom: 4rpx solid #fff;
}
.pie {
  width: 93%;
  background-color: #fff;
  margin: -50rpx auto 0;
  border-radius: 25rpx;
  box-shadow: 0 20px 50px rgba(94, 114, 228, 0.22745098039215686);
}
.charts {
  margin: 0 auto;
  height:400rpx;
  background-color: #FFFFFF;
}
.summary {
  display: flex;
  width: fit-content;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}
.summary-item {
  font-size: 27rpx;
  margin: 20rpx;
  border-radius: 40rpx;
  padding: 20rpx;
  color: #000;
  border: 1rpx solid #eee;
  text-align: center;
  transition: .5s all;
  min-width: 60px;
  width: fit-content;
}
.pay {
  background: #f75676;
  color: #fff;
  box-shadow: 0 20px 50px rgba(247, 86, 118, 0.233);
  border: 1rpx solid rgba(247, 86, 118, 0.233);
}
.income {
  background: #4fd69c;
  color: #fff;
  box-shadow: 0 20px 50px rgba(79, 214, 155, 0.226);
  border: 1rpx solid rgba(79, 214, 155, 0.226);
}
.select-filter {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx 20rpx;
  font-size: 28rpx;
}